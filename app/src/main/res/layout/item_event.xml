<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Featured event image + badge -->
        <FrameLayout
            android:id="@+id/event_featured_image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/event_featured_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/event_featured_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:background="@drawable/featured_badge_background"
                android:text="â˜…  FEATURED EVENT"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.05" />
        </FrameLayout>

        <!-- Day banner -->
        <TextView
            android:id="@+id/event_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="6dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/accent_blue"
            android:letterSpacing="0.08" />

        <!-- Main content: icon + event info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <!-- Music icon -->
            <ImageView
                android:id="@+id/event_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/music"
                android:scaleType="centerInside" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- Artist name -->
                <TextView
                    android:id="@+id/event_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Venue -->
                <TextView
                    android:id="@+id/event_venue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Thin divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/divider" />

        <!-- Bottom row: showtime + distance + chevron -->
        <LinearLayout
            android:id="@+id/event_action_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/venue_action_ripple"
            android:clickable="true"
            android:focusable="true">

            <!-- Showtime -->
            <TextView
                android:id="@+id/event_showtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/text_open"
                android:textStyle="bold" />

            <!-- Distance -->
            <TextView
                android:id="@+id/event_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:textSize="13sp"
                android:textColor="@color/text_secondary" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/chevron"
                android:scaleType="centerInside"
                android:alpha="0.4" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
