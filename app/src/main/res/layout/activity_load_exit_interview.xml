<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_page"
    tools:context=".LoadExitInterview">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/card_white"
        android:elevation="1dp">

        <Button
            android:id="@+id/backmain"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="80dp"
            android:gravity="center"
            android:text="Back"
            android:textSize="14sp"
            android:textColor="@color/accent_blue"
            android:textAllCaps="false"
            app:backgroundTint="@color/card_white"
            android:elevation="0dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:paddingEnd="8dp"
            android:text="Feedback"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Loading spinner -->
    <LinearLayout
        android:id="@+id/loading_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="40dp"
        android:paddingBottom="20dp">

        <com.github.ybq.android.spinkit.SpinKitView
            style="@style/SpinKitView.Small.CubeGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/text_secondary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:text="Loading questionnaire..."
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- Empty / no active questionnaire -->
    <LinearLayout
        android:id="@+id/empty_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="60dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="No feedback questionnaire available at this time."
            android:textSize="16sp"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- Already submitted state -->
    <LinearLayout
        android:id="@+id/already_submitted_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="60dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thank You!"
            android:textSize="24sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text="You have already submitted your feedback for this questionnaire. Thank you for sharing your thoughts!"
            android:textSize="15sp"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- Thank you state (shown after submit) -->
    <LinearLayout
        android:id="@+id/thankyou_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="60dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thank You!"
            android:textSize="24sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text="Your feedback has been submitted successfully. We appreciate your time!"
            android:textSize="15sp"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- Questionnaire content -->
    <ScrollView
        android:id="@+id/questionnaire_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title and description -->
            <TextView
                android:id="@+id/interview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/interview_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="20dp"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

            <!-- Questions container (dynamically populated) -->
            <LinearLayout
                android:id="@+id/questions_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Submit button -->
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="24dp"
                android:text="Submit Feedback"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:backgroundTint="#8B5CF6"
                android:elevation="2dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
