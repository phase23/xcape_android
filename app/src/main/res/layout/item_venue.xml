<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/venue_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_white">

    <LinearLayout
        android:id="@+id/venue_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Advertiser image gallery with Featured badge overlay -->
        <FrameLayout
            android:id="@+id/venue_image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ViewFlipper
                android:id="@+id/venue_image_flipper"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <!-- Featured badge: top-left corner over image -->
            <TextView
                android:id="@+id/featured_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:background="@drawable/featured_badge_background"
                android:text="â˜…  FEATURED"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.05" />

            <!-- Discount badge on premium image: top-right -->
            <TextView
                android:id="@+id/venue_premium_discount_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/discount_tag_background"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Discounts available"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- Dot indicators for multiple images -->
            <LinearLayout
                android:id="@+id/venue_image_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Main content: icon + name/distance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="14dp"
            android:paddingBottom="6dp">

            <!-- Category icon -->
            <ImageView
                android:id="@+id/venue_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="centerInside" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- Venue name row with optional badge emoji -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/badge_emoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:layout_marginEnd="6dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/venue_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/venue_local_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOCAL"
                        android:textSize="10sp"
                        android:textColor="#2E7D32"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:background="@drawable/local_badge_background"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_marginStart="6dp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Distance -->
                <TextView
                    android:id="@+id/venue_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp" />

                <!-- Tappable hours row (restaurants) -->
                <LinearLayout
                    android:id="@+id/venue_hours_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/venue_hours_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\uD83D\uDD52 Hours"
                        android:textSize="12sp"
                        android:textColor="@color/accent_blue"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/venue_open_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Expandable hours detail -->
                <TextView
                    android:id="@+id/venue_hours_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="3dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="2dp"
                    android:visibility="gone" />

                <!-- Discount tag -->
                <TextView
                    android:id="@+id/venue_discount_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discounts available"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/discount_tag_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <!-- Advertiser details section -->
        <LinearLayout
            android:id="@+id/advertiser_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/venue_opening_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/text_open"
                android:layout_marginTop="6dp"
                android:drawablePadding="6dp" />

            <TextView
                android:id="@+id/venue_opening_times_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/text_open"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/venue_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="6dp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/venue_weblink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textSize="13sp"
                android:textColor="@color/accent_blue"
                android:textStyle="bold"
                android:background="@drawable/venue_action_ripple"
                android:drawablePadding="6dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Rating row (hidden when ratings disabled) -->
        <LinearLayout
            android:id="@+id/venue_rating_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="8dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/venue_stars_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/venue_rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="13sp"
                android:textColor="@color/text_secondary" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/venue_rate_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:textSize="13sp"
                android:textColor="@color/accent_blue"
                android:textStyle="bold"
                android:paddingStart="12dp"
                android:paddingEnd="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- Thin divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/divider" />

        <!-- Action row: driving time + chevron -->
        <LinearLayout
            android:id="@+id/venue_action_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/venue_action_ripple"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/venue_driving_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/accent_blue"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/chevron"
                android:scaleType="centerInside"
                android:alpha="0.4" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
