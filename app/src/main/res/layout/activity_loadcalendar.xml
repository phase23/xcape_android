<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_page"
    tools:context=".LoadCalendar">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/card_white"
        android:elevation="1dp">

        <Button
            android:id="@+id/backmain"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="80dp"
            android:gravity="center"
            android:text="Back"
            android:textSize="14sp"
            android:textColor="@color/accent_blue"
            android:textAllCaps="false"
            app:backgroundTint="@color/card_white"
            android:elevation="0dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:paddingEnd="8dp"
            android:text="Events Calendar"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Loading spinner -->
    <LinearLayout
        android:id="@+id/loading_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="40dp"
        android:paddingBottom="20dp">

        <com.github.ybq.android.spinkit.SpinKitView
            style="@style/SpinKitView.Small.CubeGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/text_secondary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:text="Loading events..."
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/empty_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="60dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="No upcoming events"
            android:textSize="16sp"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- Event list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_event_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

</LinearLayout>
